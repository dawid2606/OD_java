		User u;
		if(varx == 1)
			u = new User(1, "Ola");
		else
			u = new User(2, "Dawid");
		
		String s = "{ \"ID\":\"SGML\",\"SortAs\":\"SGML\",\"GlossTerm\":\"Standard Generalized Markup Language\",\"Acronym\":\"SGML\",\"Abbrev\":\"ISO 8879:1986\"}";
	return u.toString();
	}
	
}
